datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  admin
  business_owner
  author
  editor
  subscriber
  guest
}

enum BillingPeriod {
  monthly
  yearly
}

enum BusinessStatus {
  pending
  approved
  rejected
}

enum PostStatus {
  draft
  published
}

enum EmailLogStatus {
  sent
  failed
  skipped
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String    @default("")
  image         String?
  role          UserRole  @default(guest)
  emailVerified DateTime?
  passwordHash  String?
  slug          String?   @unique
  avatar        String?
  bio           String?
  location      String?
  title         String?
  businessId    String?

  business        Business?      @relation("BusinessUsers", fields: [businessId], references: [id])
  ownedBusinesses Business[]     @relation("BusinessOwner")
  authorProfile   AuthorProfile?
  accounts        Account[]
  sessions        Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String @id @default(cuid())
  name        String
  slug        String @unique
  icon        String
  description String
  color       String

  businesses Business[]
}

model Badge {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  icon  String
  color String

  businesses BusinessBadge[]
}

model PricingPackage {
  id            String        @id @default(cuid())
  name          String
  price         Float
  billingPeriod BillingPeriod
  durationDays  Int           @default(30)
  description   String
  features      Json
  galleryLimit  Int           @default(0)
  featured      Boolean       @default(false)
  active        Boolean       @default(true)

  businesses Business[]
}

model Business {
  id               String         @id @default(cuid())
  name             String
  slug             String         @unique
  tagline          String
  description      String
  seoKeywords      String?
  gallery          Json?
  categoryId       String
  pricingPackageId String?
  logo             String
  coverImage       String
  likes            Int            @default(0)
  location         Json
  contact          Json
  social           Json
  sustainability   Json
  status           BusinessStatus @default(pending)
  featured         Boolean        @default(false)
  views            Int            @default(0)

  ownerId String
  owner   User   @relation("BusinessOwner", fields: [ownerId], references: [id])

  users User[] @relation("BusinessUsers")

  category       Category        @relation(fields: [categoryId], references: [id])
  pricingPackage PricingPackage? @relation(fields: [pricingPackageId], references: [id])

  products  Product[]
  menuItems MenuItem[]
  services  Service[]
  reviews   Review[]
  badges    BusinessBadge[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BusinessBadge {
  businessId String
  badgeId    String

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  badge    Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@id([businessId, badgeId])
}

model Product {
  id          String  @id @default(cuid())
  businessId  String
  name        String
  description String
  price       Float
  image       String
  inStock     Boolean @default(true)

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id          String @id @default(cuid())
  businessId  String
  category    String
  name        String
  description String
  price       Float
  dietary     Json?

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Service {
  id          String @id @default(cuid())
  businessId  String
  name        String
  description String
  pricing     String

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Review {
  id         String  @id @default(cuid())
  businessId String
  authorName String
  rating     Int
  comment    String
  flagged    Boolean @default(false)

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model AuthorProfile {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  title    String
  bio      String
  avatar   String
  location String?
  links    Json
  userId   String  @unique

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts NewsPost[]

  createdAt DateTime @default(now())
}

model NewsPost {
  id             String     @id @default(cuid())
  title          String
  slug           String     @unique
  category       String
  authorSlug     String
  excerpt        String
  content        String     @db.LongText
  coverImage     String
  author         String
  publishedAt    DateTime?
  readTime       String
  tags           Json
  featured       Boolean    @default(false)
  seoTitle       String?
  seoDescription String?
  seoKeywords    String?
  status         PostStatus @default(draft)
  authorId       String

  authorProfile AuthorProfile @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailLog {
  id        String         @id @default(cuid())
  to        String
  subject   String
  template  String
  status    EmailLogStatus
  error     String?        @db.Text
  messageId String?
  createdAt DateTime       @default(now())
}
